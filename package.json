{
  "name": "coleman-liau",
  "version": "1.0.0",
  "description": "Formula to detect the ease of reading a text according to the Coleman-Liau index (1975)",
  "license": "MIT",
  "keywords": [
    "coleman",
    "liau",
    "index",
    "readability",
    "formula"
  ],
  "files": [
    "index.js"
  ],
  "repository": "https://github.com/wooorm/coleman-liau",
  "bugs": "https://github.com/wooorm/coleman-liau/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {},
  "devDependencies": {
    "browserify": "^13.0.1",
    "esmangle": "^1.0.1",
    "is-nan": "^1.2.1",
    "nyc": "^9.0.1",
    "remark-cli": "^2.0.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.0.0",
    "xo": "^0.17.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --bare -s colemanLiau > coleman-liau.js",
    "build-mangle": "esmangle coleman-liau.js > coleman-liau.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "ignores": [
      "coleman-liau.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "presets": "wooorm"
  }
}
